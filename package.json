{
  "name": "ext-corb-workaround",
  "version": "2.0.0",
  "description": "A work-around for CORB restrictions in Chrome extensions",
  "main": "dist/src/index.js",
  "sideEffects": false,
  "scripts": {
    "prepare": "rimraf dist && babel -s true -d dist/src/ src/ -x .ts --ignore '**/*.test.ts' && tsc",
    "test": "yarn run lint && jest",
    "lint": "eslint . --ext ts,tsx && prettier --check '**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "eslint . --ext ts,tsx --fix && prettier --write '**/*.{js,jsx,ts,tsx}'"
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/Macil/ext-corb-workaround",
  "author": "Chris Cowan <agentme49@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.5.0",
    "husky": "^4.2.1",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
